<section class="hero has-background-grey">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        投稿一覧
      </h1>
    </div>
  </div>
</section>
<section class="form-section">
  <div class="container">
    <div class="search-form">
      <%= search_form_for @q do |f| %>
        <div class="field">
          <%= f.label :item_cont %>
          <%= f.search_field :item_cont %>
          <%= f.submit "検索", class: "button is-success" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<% if params[:q] %>
  <% if @posts.present? %>
    <%= render "posts"%>
  <% else %>
    <p class="no-mach">該当するアイテムが見つかりませんでした</p>
  <% end %>
<% else %>
  <%= render "posts"%>
<% end %>

<div class="row" id="paginate">
  <div class="col-md-2">
    <%= paginate @posts %>
  </div>
</div>