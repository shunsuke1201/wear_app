<section class="hero has-background-grey">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <% if @user.id == current_user.id %>
          マイページ
        <% else %>
          ユーザーページ
        <% end %>
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
        <div class="columns is-centered">
          <div class="column is-4" id="image-name">
            <figure class="image">
              <%= attachment_image_tag @user, :profile_image, :fill, 1000, 1000, fallback: "no-image.png" %>
            </figure>
            <p class="name">
              <strong>
                <%= @user.username %>
              </strong>
            </p>
          </div>
          <div class="column is-8">
            <table class="table is-fullwidth">
              <tr>
                <td class="is-size-4">
                  <strong>
                    <data>
                      <%= @user.height %>cm
                    </data>
                    <data>
                      <%= @user.weight %>kg
                    </data>
                    <data>
                      <%= link_to @user.followings.count, followings_user_path(@user) %>フォロー
                      <%= link_to @user.followers.count, followers_user_path(@user) %>フォロワー
                    </data>
                  </strong>
                </td>
                <% if @user.id == current_user.id %>
                <td class="is-size-4">
                  <%= @user.email %>
                </td>
                <td>
                  <%= link_to "編集", edit_user_path(@user), class: "button is-primary" %>
                </td>
                <% else %>
                <td>
                  <% if @user.is_followed_by?(current_user) %>
                    <%= link_to "フォロー解除", user_relationships_path(@user), method: :delete , class: "button is-danger" %>
                  <% else %>
                    <%= link_to "フォロー", user_relationships_path(@user), method: :post , class: "button is-info" %>
                  <% end %>
                </td>
                <% end %>
              </tr>
            </table>
            <table class="table is-fullwidth">
              <tr>
                <td>
                  <%= @user.profile %>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @user.posts.each do |post| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <% post.post_images.first(1).each do |post_image| %>
                  <%= link_to post_path(post) do %>
                    <%= attachment_image_tag post_image, :image, fallback: "no-image.png" %>
                  <% end %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <%= link_to post_path(post), class: "panel-block" do %>
                    <span class="panel-icon">
                      <i class="fas fa-book" aria-hidden="true"></i>
                    </span>
                    投稿を見る
                  <% end %>
                  <% if @user.id == current_user.id %>
                    <%= link_to edit_post_path(post), class: "panel-block" do %>
                      <span class="panel-icon">
                        <i class="fas fa-edit"></i>
                      </span>
                      編集する
                    <% end %>
                    <%= link_to post_path(post), method: :delete, data: {confirm: "削除しますか？"}, class: "panel-block" do %>
                      <span class="panel-icon">
                        <i class="fas fa-trash"></i>
                      </span>
                      削除する
                    <% end %>
                  <% end %>
                </div>
              </div>
              <div class="content">
                <time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>