<section class="hero has-background-grey">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <% if @user.id == current_user.id %>
          マイページ
        <% else %>
          ユーザーページ
        <% end %>
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
        <div class="columns is-centered">
          <div class="column is-4" id="image-name">
            <figure class="image">
              <%= attachment_image_tag @user, :profile_image, :fill, 1000, 1000, fallback: "no-image.png" %>
            </figure>
            <p class="name">
              <strong>
                <%= @user.username %>
              </strong>
            </p>
          </div>
          <div class="column is-8">
            <table class="table is-fullwidth">
              <tr>
                <td class="is-size-4">
                  <strong>
                    <data>
                      <%= @user.height %>cm
                    </data>
                    <data>
                      <%= @user.weight %>kg
                    </data>
                    <data id="relationship_count">
                      <%= render partial: "relationships/relationship_count", locals: { user: @user } %>
                    </data>
                  </strong>
                </td>
                <% if @user.id == current_user.id %>
                <td class="is-size-4">
                  <%= @user.email %>
                </td>
                <td>
                  <%= link_to "編集", edit_user_path(@user), class: "button is-primary" %>
                </td>
                <% else %>
                <td id="relationship_<%= @user.id %>">
                  <%= render partial: "relationships/relationship", locals: { user: @user } %>
                </td>
                <% end %>
              </tr>
            </table>
            <table class="table is-fullwidth">
              <tr>
                <td>
                  <%= @user.profile %>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @user.posts.each do |post| %>
        <%= render partial: 'posts/post', locals: { post: post } %>
      <% end %>
    </div>
  </div>
</section>