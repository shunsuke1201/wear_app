<section class="hero has-background-grey">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ユーザー編集
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @user do |f| %>
          <div class="field">
            <%= f.label :username, "名前", class: "label" %>
            <%= f.text_field :username, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :email, "メールアドレス", class: "label" %>
            <%= f.email_field :email, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :height, "身長", class: "label" %>
            <%= f.text_field :height, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :weight, "体重", class: "label" %>
            <%= f.text_field :weight, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :current_password, "現在のパスワード(変更する時のみ入力)", class: "label" %>
            <%= f.password_field :current_password, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :password, "新しいパスワード", class: "label" %>
            <%= f.password_field :password, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "label" %>
            <%= f.password_field :password_confirmation, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :profile_image, "プロフィール画像", class: "label" %>
            <%= f.attachment_field :profile_image, class: "input" %>
          </div>
        
        <%= f.submit "更新", class: "button is-success" %>
        
        <% end %>
      </div>
    </div>
  </div>
</section>